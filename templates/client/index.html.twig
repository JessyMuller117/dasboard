{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Client index</h1>
<div class="container">


    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom_entreprise</th>
                <th scope="col">Siret</th>
                <th scope="col">Adresse</th>
                <th scope="col">Postal</th>
                <th scope="col">Ville</th>
                <th scope="col">Nom_client</th>
                <th scope="col">Prenom</th>
                <th scope="col">Email</th>
                <th scope="col">Telephone</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.nomEntreprise }}</td>
                <td>{{ client.siret }}</td>
                <td>{{ client.adresse }}</td>
                <td>{{ client.postal }}</td>
                <td>{{ client.ville }}</td>
                <td>{{ client.nomClient }}</td>
                <td>{{ client.prenom }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.telephone }}</td>
                <td>
                    <a href="{{ path('app_client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    <a href="{{ path('app_client_new') }}">Create new</a>
{% endblock %}
