{% extends 'base.html.twig' %}

{% block title %}Liste des Clients{% endblock %}

{% block body %}

<section id="table_client" class="container-fluid">
    <h1>Liste des Clients</h1>



    <table class="table table-dark">
        <thead>
            <tr>
                <th class="test" scope="col">Id</th>
                <th scope="col">Nom_entreprise</th>
                <th scope="col">Siret</th>
                <th scope="col">Adresse</th>
                <th scope="col">Postal</th>
                <th scope="col">Ville</th>
                <th scope="col">Nom_client</th>
                <th scope="col">Prenom</th>
                <th scope="col">Email</th>
                <th scope="col">Telephone</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.nomEntreprise }}</td>
                <td>{{ client.siret }}</td>
                <td>{{ client.adresse }}</td>
                <td>{{ client.postal }}</td>
                <td>{{ client.ville }}</td>
                <td>{{ client.nomClient }}</td>
                <td>{{ client.prenom }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.telephone }}</td>
                <td>
                <button type="button" class="btn btn-info btn-sm"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"><a href="{{ path('app_client_show', {'id': client.id}) }}"><img src="https://img.icons8.com/ios-filled/24/000000/sharingan.png"/></a></font></font></button>
                <button type="button" class="btn btn-warning btn-sm"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"><a href="{{ path('app_client_edit', {'id': client.id}) }}"><img src="https://img.icons8.com/material-outlined/24/000000/pencil--v1.png"/></a></font></font></button>

                    
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

                <button type="button" class="btn btn-success btn-sm"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"><a href="{{ path('app_client_new') }}"><img src="https://img.icons8.com/fluency-systems-regular/24/000000/add-administrator.png"/>Ajouter un client</a></font></font></button>
    

</section>


{% endblock %}
